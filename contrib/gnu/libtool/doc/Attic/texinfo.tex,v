@@def@@turnoffactive{%
  @@let"=@@normaldoublequote
  @@let\=@@realbackslash
  @@let~=@@normaltilde
  @@let^=@@normalcaret
  @@let_=@@normalunderscore
  @@let|=@@normalverticalbar
  @@let<=@@normalless
  @@let>=@@normalgreater
  @@let+=@@normalplus
  @@let$=@@normaldollar %$ font-lock fix
  @@unsepspaces
}

