2.1
log
@work over most of the changes MirOS has done, and add
the new or copied/moved files
@
text
@# $MirBSD: src/share/doc/psd/Makefile,v 1.4 2004/05/23 15:56:46 tg Stab $
# $OpenBSD: Makefile,v 1.5 2004/04/09 12:10:04 jmc Exp $

INSTDIR=psd
FILES=	00.contents Makefile Title
SUBDIR!=echo */Makefile | sed 's,/Makefile[[:>:]],,g'

.include <bsd.own.mk>

all: _SUBDIRUSE
all: Title.txt contents.txt

Title.ps: ${FILES}
	${ROFF} Title >${.TARGET}
Title.txt: ${FILES}
	${NROFF} Title >${.TARGET}

contents.ps: ${FILES}
	${ROFF} -ms 00.contents >${.TARGET}
contents.txt: ${FILES}
	${NROFF} -ms 00.contents >${.TARGET}

beforeinstall:
	install -c -o ${DOCOWN} -g ${DOCGRP} -m ${DOCMODE} ${FILES} \
	    ${DESTDIR}${DOCDIR}/${INSTDIR}

.include <bsd.subdir.mk>
@


