#include <unixlib.h>

#include "cvs.h"

/* Return the current directory, newly allocated, arbitrarily long.
   Return NULL and set errno on error. */
char *
xgetwd ()
{
    char pathname[256];

    return xstrdup (getcwd (pathname, sizeof (pathname) - 2, 0));
}
