#if defined(LIBC_SCCS) && !defined(lint)
static const char rcsid[] = "$OpenBSD: isfdtype.c,v 1.3 2003/06/17 21:56:23 millert Exp $";
#endif /* not lint */

#include <sys/types.h>
#include <sys/stat.h>

int
isfdtype(int fd, int fdtype)
{
	struct stat sb;

	if (fstat(fd, &sb) != 0)
		return (-1);

	return ((sb.st_mode & S_IFMT) == fdtype);
}
