enum apm_action {
	NONE,
	SUSPEND,
	STANDBY,
	GETSTATUS
};

enum apm_state {
	NORMAL,
	SUSPENDING,
	STANDING_BY
};

struct apm_command {
	int vno;
	enum apm_action action;
};

struct apm_reply {
	int vno;
	enum apm_state newstate;
	struct apm_power_info batterystate;
};

#define APMD_VNO	1

extern const char *battstate(int state);
extern const char *ac_state(int state);
